<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="org.tiogasolutions.push.server.grizzly.PushServer" level="INFO" />
    <logger name="org.tiogasolutions.runners.grizzly.GrizzlyServerConfig" level="INFO" />
    <logger name="org.tiogasolutions.runners.grizzly.GrizzlyServerSupport" level="INFO" />
    <logger name="org.tiogasolutions.runners.grizzly.ShutdownHandler" level="INFO" />
    <logger name="org.tiogasolutions.runners.grizzly.spring.GrizzlySpringServer" level="INFO" />

</configuration>